<div class="col-sm-6">
  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <h3 class="panel-title" style="display:inline;vertical-align:bottom;">{{category.name}}</h3>
      <button {{action 'showAddingForm'}} class="btn btn-default pull-right">Add products</button>
    </div>
    <div class="panel-body">
      <h4>Products</h4>
      <ul class="list-group clearfix">
        {{#each products as |product|}}
          <li class="list-group-item">{{product.name}} <span class="badge pull-right">{{product.currentStock}}</span></li>
        {{/each}}
      </ul>
    </div>
  </div>
  {{#if addingProduct}}
    <h4>Add a product</h4>
    <form class="form">
      <div class="form-group">
        <label for="">Name</label>
        {{input type="text" class="form-control" value=newProduct.name placeholder="Name ..."}}
      </div>
      <div class="form-group">
        <label for="">Description</label>
        {{input type="text" class="form-control" value=newProduct.description placeholder="Description ..."}}
      </div>
      <div class="form-group">
        <label for="">SKU Code</label>
        {{input type="text" class="form-control" value=newProduct.sku placeholder="Item code ..."}}
      </div>
      <div class="form-group">
        <label for="">Distribution Unit</label>
        {{input type="text" class="form-control" value=newProduct.form placeholder="Units ..."}}
      </div>
      <div class="form-group">
        <label for="">Cost</label>
        {{input type="text" class="form-control" value=newProduct.cost placeholder="Buying cost ..."}}
      </div>
      <div class="form-group">
        <label for="">Price</label>
        {{input type="text" class="form-control" value=newProduct.unitPrice placeholder="Unit price ..."}}
      </div>
      <div class="form-group">
        <label for="">Quantity</label>
        {{input type="text" class="form-control" value=newProduct.startStock placeholder="Quantity ..."}}
      </div>

      <div class="form-group text-right">
        <button {{action 'addProduct' newProduct}} class='btn btn-lg btn-info'>Add</button>
        <button {{action 'cancelAdd'}} class='btn btn-lg btn-danger'>Cancel</button>
      </div>
    </form>
  {{/if}}
</div>
