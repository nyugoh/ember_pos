<div>
  <div class="col-sm-offset-1 col-sm-6">
    <div class="row search-item">
      <div class="col-xs-12 col-sm-6">
        <label for="itemCode">Stock Item</label>
        {{input enter='searchItem' class="form-control" placeholder="Search item by id" }}
      </div>
      <div class="col-xs-12 col-sm-6">
        <label for="itemCode">Stock Name</label>
        {{input enter='searchName' class="form-control" placeholder="Search item by name..." }}
      </div>
    </div>
    {{!-- End of top search box --}}

    <div class="items">
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>Qty</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              {{input class="form-control" value=item.qty}}
            </td>
            <td>
              {{input class="form-control" value=item.name}}
            </td>
            <td>
              {{input class="form-control" value=item.unitPrice}}
            </td>
            <td>
              <button {{action 'removeItem' item}} class='btn btn-sm btn-danger '><span class="glyphicon glyphicon-trash"></span></button>
            </td>
          </tr>
        </tbody>
      </table>
      <div class="row text-right">
        {{!-- <div class="col-xs-12 col-sm-12">
          <div class="row">
            <div class="col-xs-offset-3 col-xs-4">
              <span>Subtotals</span>
              <span>1100{{total.subtotals}}</span>
            </div>
            <div class="col-xs-5">
              <span>Tax</span>
              <span>150{{total.tax}} Ksh</span>
            </div>
          </div>
          <div class="row">
            <div class=" col-xs-5 input-group">
              <span class="input-group-addon">Discount %</span>
              <input type="text" class="form-control" placeholder="Discount">
              <span class="input-group-addon">100 Ksh</span>
            </div>
            <div class="col-xs-4">
              <span class="">Total:: {{total.total}}1000 Ksh</span>
            </div>
          </div>
        </div> --}}
        <div class="col-xs-offset-8 col-xs-4">
          <h3 class="lead">Total:: {{total.total}}1000 Ksh</h3>
        </div>
        <div class="col-xs-offset-8 col-xs-4 text-right">
          <button type='submit' class='btn btn-lg btn-danger '>Abort</button>
          <button type='submit' class='btn btn-lg btn-success '>Checkout</button>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-5" id="items">
    <h2>Products go here</h2>
    <div class="row item-boxes">
      {{#each products as |product|}}
        {{#unless product.isNew}}
          <div class="item col-xs-3">
            <h4 style="display:inline">{{product.name}}</h4>
            <h4>{{product.unitPrice}} Ksh</h4>
            <h4>({{product.currentStock}})</h4>
          </div>
        {{/unless}}
      {{/each}}
    </div>
  </div>
</div>
